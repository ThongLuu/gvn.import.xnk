  <form class="form-signin">
    <div class="text-center mb-4">
      <img class="mb-4" src="https://file.hstatic.net/1000026716/file/favicon_0db2583fad1443e482491c7db08765e6.png" alt="" width="72"
        height="72">
      <h1 class="h3 mb-3 font-weight-normal">Xin chào, <%- user -%></h1>
    </div>

    <% if (auth) {%>
    <button class="btn btn-lg btn-primary btn-block btn-auth" style="color:white;    text-decoration: none;"
      type="button">Chuyển đến trang chủ</button>
    <% } else {%>
    <button class="btn btn-lg btn-primary btn-block" onclick="location.href='/login'"
      style="color:white;    text-decoration: none;" type="button">Đăng nhập</button>
    <% }%>
    <p class="mt-5 mb-3 text-muted text-center">&copy; GEARVN 2018-2021</span></p>
    <!-- <p class="mt-5 mb-3 text-muted text-center">&copy; GEARVN 2018-<span id="fullyear"></span></p> -->

    <% if (auth) {%>
    <script>
      var date = new Date().getFullYear();
      var link = '';
      if (localStorage.getItem('token')) {
        link = '/dashboard';
      } else {
        link = (`<%- ssoUrl -%>`);
      }
      //document.querySelector('#fullyear').innerHTML = date;
      document.querySelector('.btn-auth').addEventListener('click', function () {
        location.href = link;
      });

    </script>
    <% } %>

  </form>
